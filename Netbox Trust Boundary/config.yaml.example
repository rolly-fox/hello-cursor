# NetBox Trust Boundary Configuration
# Copy this file to config.yaml and update with your settings

netbox:
  # Your NetBox instance URL (no trailing slash)
  url: "https://netbox.example.com"
  
  # API token with read permissions
  # Generate at: NetBox → Admin → API Tokens
  token: "your-api-token-here"
  
  # Site to validate against (slug or numeric ID)
  # Find slug: Organization → Sites → click site → check "Slug" field
  # Find ID: check URL like /dcim/sites/5/ → ID is 5
  site: "your-site-slug"
  
  # SSL certificate verification
  # Set to false for internal CAs or self-signed certificates
  verify_ssl: true

validation:
  # Optional: regex pattern for device naming convention
  # Example: "^[A-Z]{2}\\d{2}[A-Z]\\d{2}_.*$" for patterns like "DC10A01_hostname"
  # Set to null to skip naming validation
  naming_pattern: null
